    "typescript": "5.9.3",
    "whatwg-url": "14.1.1",
    "zod": "3.25.76"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --ignore-path ./.prettierignore --write "
