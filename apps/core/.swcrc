{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "experimental": {
      "keepImportAttributes": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "~": ["./src"]
    }
  },
  "module": {
    "type": "es6",
    "resolveFully": true
  }
}
