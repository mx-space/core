{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "noEmit": true,
    "jsx": "preserve",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@pkg": [
        "./package.json"
      ]
    },
  },
  "include": [
    "./src/**/*",
  ]
}